<body>    
<div class="container">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        
                <div class="title">Login</div>
                <div class="input-box">
                    <input type="text"  id="inputUsername" name="username" value="{{ last_username }}"  placeholder="Enter Your Email...." autocomplete="username" required autofocus>
                    <div class="underline"></div>   
                </div>
                <div class="input-box">
                    <input type="password" name="password" id="inputPassword" placeholder="Password...." autocomplete="current-password" required>
                    <div class="underline"></div>   
                </div>

                
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
                <div class="input-box button">
                    <input type="submit" value="Login"> 
                </div>
            
            <div class="option">Or  <a href="Register.html">Sign Up</a></div>

    

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

    

        
    </form>
</div>

</body>
{% endblock %}
