{% extends 'base.html.twig' %}

{% block title %} Category
{% endblock %}

{% block body %}
	
		<!-- main content -->
		<div class="main">
			<div
				class="col-12" style="margin-top: 15px;">
				<!--  TABLE -->
				<div class="box">
					<div class="box-header">
					    Category List
					</div>
					<div class="box-body overflow-scroll">
						<table>
							<thead>
								<tr>
									<th>ID</th>
									<th>Category Name</th>
									{# <th>Date</th> #}
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
							{% for category in categories %}
                                <tr>
									<td>{{category.id}}</td>
									<td>
										<span class="slot name-shipped">
											{{category.catName}}
										</span>
									</td>
									
									
                                    <td>
										<div class="teach-status teach-paid">
											<div class="dot"></div>
											<span>{{category.date)}}</span>
										</div>
									</td>
									<td class="text-right">
										<div class="actions">
											<a href="{{path('view_category_detail_id', {'id': category.id})}}">
												<i class='las la-eye'></i>
											</a>
											<a href="{{path('category_update', {'id': category.id})}}">
												<i class='bx bxs-edit'></i>
											</a>
											<a href="{{path('category_delete', {'id': category.id})}}" onclick="Confirm('Are yeu Sure ?')">
												<i class='bx bxs-trash'></i>
											</a>
										</div>
									</td>
								</tr>
                            {% endfor %}
								
							</tbody>
						</table>
					</div>
				</div>
				<!-- END  TABLE -->
			</div>
		</div>
		<!-- END MAIN CONTENT -->



    
</html>{% endblock %}
